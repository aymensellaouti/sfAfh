{% extends 'base.html.twig' %}

{% block title %}Personnes{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <th>Avatar</th>
        <th>Firstname</th>
        <th>Name</th>
        <th>Cin</th>
        <th>Age</th>
        <th>
            <i class="fas fa-info-circle"></i>
            <i class="fas fa-trash"></i>
        </th>
        </thead>
        <tbody>
        {% for person in persons %}
            <tr>
                <td>
                    <img src="{{ asset('assets/images/'~person.path | defaultImage) }}"
                         alt="Cv"
                         class="rounded-circle"
                         width="50"
                         height="50"
                    ></td>
                <td>{{ person.firstname }}</td>
                <td>{{ person.name }}</td>
                <td>{{ person.age }}</td>
                <td>{{ person.cin }}</td>
                <td>
                    <a href="{{ path('app_detail_person', {id: person.id}) }}">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    <a href="{{ path('delete_person', {id: person.id}) }}">
                        <i class="fas fa-trash"></i>
                    </a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
